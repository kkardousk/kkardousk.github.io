) +
labs(x = NULL, y = NULL) +
scale_x_continuous(
breaks = seq(3000, 11000, 1000),
labels = c(format(seq(3000, 10000, 1000), big.mark = ",", trim = TRUE), "$11,000")
) +
coord_cartesian(
xlim = c(2100, 11300),
ylim = c(77, 86),
expand = FALSE,
clip = 'off'
) +
# add caption for p2

annotate(
geom = 'text',
label = 'Life expectancy',
x = 2685,
y = 85.8,
color = '#7B7B7B',
fontface = "bold",
fontfamily = 'roboto',
fontsize = 15
) +
# x axis
annotate(
geom = 'text',
label = 'Per-capita\n  spend',
